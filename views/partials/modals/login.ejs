<div class="auth-modal">
    <!-- <div class="modal-close" id="auth-close">&times;</div> -->
    <svg class="modal-close login-modal-close" id="auth-close" width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12Z" stroke="#000000" stroke-width="2"/>
        <path d="M9 9L15 15M15 9L9 15" stroke="#000000" stroke-width="2" stroke-linecap="round"/>
    </svg>
    <div class="auth-modal-inner">
        <div id="login-register-btns" class="auth-tabs">
            <div id="login-btn" class="toggle selected">Login</div>
            <div class="divider">|</div>
            <div id="register-btn" class="toggle">Register</div>
        </div>

        <!-- LOGIN FORM -->
        <div id="login-form-div" class="auth-section">
            <!-- <h2>Welcome Back</h2> -->
            <form action="/user/login" id="login-form" method="post" class="auth-form">
                <div class="form-group">
                    <label for="login-username">* Email</label>
                    <input type="text" id="login-username" name="username" placeholder="" required>
                </div>

                <div class="form-group">
                    <label for="login-password">* Password</label>
                    <input type="password" id="login-password" name="password" placeholder="" required>
                </div>

                <button class="btn btn-secondary">Login</button>
            </form>
            <p class="forgot-text">Forgot your password? 
                <a id="forgot-password-btn" class="link-text">Reset it</a>
            </p>
        </div>

        <!-- REGISTER FORM -->
        <div id="register-form-div" class="auth-section hidden">
            <!-- <h2>Create an Account</h2> -->
            <form action="/user/register" id="register-form" method="post" class="auth-form" novalidate>
                <div class="form-group">
                    <label for="register-fname">* Nickname</label>
                    <input type="text" id="register-fname" name="fname" placeholder="Bob"  maxlength="15" required>
                    <div id="register-fname-feedback" class="feedback"></div>
                </div>
                
                <div class="form-group">
                    <label for="register-username">* Login Email</label>
                    <input type="text" id="register-username" name="username" placeholder="bob@gmail.com" required>
                    <div id="register-email-feedback" class="feedback"></div>

                    <input type="text" name="website_user" id="website" style="display:none;" tabindex="-1" autocomplete="off">
                </div>

                <div class="form-group">
                    <label for="register-password">* Password</label>
                    <input type="password" id="register-password" name="password" placeholder="" required>
                    <div id="register-password-feedback" class="feedback"></div>

                    <ul id="register-password-rules" class="password-rules">
                        <li id="rule-length">8â€“30 characters</li>
                        <li id="rule-upper">At least one uppercase letter</li>
                        <li id="rule-lower">At least one lowercase letter</li>
                    </ul>
                </div>

                <div class="form-group">
                    <label for="register-password-confirm">* Confirm Password</label>
                    <input type="password" id="register-password-confirm" placeholder="" required>
                    <div id="register-confirm-feedback" class="feedback"></div>
                </div>

                <div class="form-group">
                    <label for="hands-check">* Human Check: How Many Fingers on a Left Hand?</label>
                    <input type="text" id="hands-check" name="hands_check" placeholder="Just the number"  maxlength="15" required>
                </div>
                
                <button class="btn btn-secondary">Register</button>
            </form>
        </div>

        <!-- Forgot PASSWORD FORM -->
        <div id="forgot-password-form-div" class="auth-section hidden">
            <h2>Forgot Password</h2>
            <form action="/user/forgot-password" id="forgot-password-form" method="post" class="auth-form">
                <label for="forgot-username">* Email</label>
                <input type="text" id="forgot-username" name="forgot_username" placeholder="" required>
                <button class="btn btn-secondary">Send Reset Link</button>
            </form>
            <p class="forgot-text">
                <!-- <span id="login-btn" class="link-text">Back to login</span> -->
            </p>
        </div>
    </div>
</div>
